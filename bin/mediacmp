#!/usr/bin/bash

[[ $# > 1 ]] || exit

((c = $# * 5))
args=("$@")
while ((c-- > 0)); do
	((i = RANDOM % $#))
	((j = RANDOM % $#))
	((i == j)) || {
		x=${args[$i]}
		args[i]=${args[j]}
		args[j]=$x
	}
done

while ((++c < ${#args[@]})); do
	xterm bash -c "echo $((c + 1));mpv \"$PWD/${args[$c]}\"" &
done
read -p "pick 1-${#args[@]}:" best
echo "${args[$((best - 1))]}"
