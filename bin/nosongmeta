#!/usr/bin/bash
if [[ -z $2 ]]; then
	# Expects the path given contains the slash and can contain a prefix
	for file in *.mp3 *.m4a *.opus *.ogg *.flac *.wav; do
		[[ -f $file ]] && ffmpeg -v quiet -i "$PWD/$file" -map_metadata -1 -map 0:a -c:a copy "$1${file##*\/}"
	done
else
	ffmpeg -v quiet -i "$1" -map_metadata -1 -map 0:a -c:a copy "$2"
fi
