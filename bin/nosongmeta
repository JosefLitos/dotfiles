#!/usr/bin/bash
if [[ -z $2 ]]; then
	# Expects the path given contains the slash and can contain a prefix
	for file in *.mp3 *.m4a *.opus *.ogg *.flac *.wav; do
		[[ -f $file ]] && ffmpeg -i "$PWD/$file" -map_metadata -1 -map 0:a -c:a copy "$1${file##*\/}" >/dev/null 2>&1
	done
else
	ffmpeg -i "$1" -map_metadata -1 -map 0:a -c:a copy "$2" >/dev/null 2>&1
fi
