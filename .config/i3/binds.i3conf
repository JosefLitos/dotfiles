bindsym $Mod+j exec "playerctl --player=mpv,vlc position 30-"
bindsym Ctrl+KP_Up exec "playerctl --player=mpv,vlc position 30-"
bindsym $Mod+k exec "playerctl --player=mpv,vlc position 30+"
