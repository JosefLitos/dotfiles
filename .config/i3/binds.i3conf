# Extra functions |
#-----------------+

set $barsig ~/.config/i3blocks/signal

# Screenshot
# my pc has PrintScreen as Fn+s
bindsym Print exec maim -f jpg -u | xclip -selection c -t image/png
bindsym $Mod+Print exec maim -u "Pictures/scrshot/$(date +%y-%m-%d_%H-%M-%S).png"
bindsym Shift+Print exec "maim -lusb 2 -c 0.74,0.25,0.72,0.05 | xclip -selection c -t image/png"
bindsym Ctrl+Print exec cd Pictures/scrshot && feh -. -B black -\| "$(ls -t|head -n1)"

# Keyboard layout toggle, manual
bindsym $Mod+n exec $barsig kb
#exec setxkbmap -layout us,cz -option -option grp:alt_shift_toggle

# Disk connection management
bindsym $Mod+$Alt+p exec $term -e bashmount
# poweroff and eject any connected device (udisksctl power-off -b /dev/sdx0)

# Change gamma, "redshift" manually - n for night
bindsym $Mod+$Alt+n exec pgrep -x "redshift" && killall redshift || redshift -l 50:14.5
bindsym $Mod+Shift+n exec xrandr --output $display --gamma 1

# Rotating screen
bindsym $Alt+Ctrl+Left exec xrandr -o left
bindsym $Alt+Ctrl+Right exec xrandr -o right
bindsym $Alt+Ctrl+Up exec xrandr -o normal
bindsym $Alt+Ctrl+Down exec xrandr -o inverted

# Brightness
bindsym $Mod+b exec $barsig light ↑
bindsym $Mod+Shift+b exec $barsig light ↓
bindsym XF86MonBrightnessUp exec $barsig light ↑
bindsym XF86MonBrightnessDown exec $barsig light ↓
bindsym KP_Prior exec $barsig light ↑
bindsym KP_Next exec $barsig light ↓
bindsym Shift+KP_Prior exec $barsig light + 3
bindsym Shift+KP_Next exec $barsig light - 2

# Audio / Volume
bindsym $Mod+v exec $barsig vol +5
bindsym $Mod+Shift+v exec $barsig vol -5
bindsym $Mod+$Alt+Shift+v exec $barsig vol toggle
bindsym $Mod+$Alt+v exec $barsig mic toggle
bindsym XF86AudioRaiseVolume exec $barsig vol +5
bindsym XF86AudioLowerVolume exec $barsig vol -5
bindsym XF86AudioMute exec $barsig vol toggle
bindsym XF86AudioMicMute exec $barsig mic toggle
bindsym KP_Divide exec $barsig vol -5
bindsym KP_Multiply exec $barsig vol +5
bindsym Ctrl+KP_Divide exec $barsig mic -2
bindsym Ctrl+KP_Multiply exec $barsig mic +2
bindsym Shift+KP_Divide exec $barsig vol toggle
bindsym Shift+KP_Multiply exec $barsig mic toggle

# Media management
bindsym $Mod+i exec notify-send -u low -a info -h int:value:$((100*$(playerctl --player=mpv metadata\
 --format '{{position}}/{{mpris:length}}'))) "$(playerctl metadata --player=mpv --format '{{title}}')"
bindsym $Mod+m exec songselect &
bindsym $Mod+Ctrl+m exec songselect auto &
bindsym $Mod+$Alt+Ctrl+m exec dir="$HOME/Music/$(sed 's/\(.*\)\/.*/\1/' /tmp/song)"\
 && rm /tmp/song && playerctl --player=mpv stop && sleep 1 && rndMusic "$dir"
bindsym $Mod+$Alt+m exec $term -e ranger --selectfile="$HOME/Music/$(cat /tmp/song)"
bindsym $Mod+Shift+m exec rm /tmp/song && playerctl --player=mpv stop
bindsym Shift+XF86AudioStop exec rm /tmp/song && playerctl --player=mpv stop
bindsym Shift+XF86AudioNext exec playerctl --player=mpv stop
bindsym XF86AudioPlay exec "playerctl --player=mpv,vlc play-pause"
bindsym KP_Subtract exec playerctl --all-players play-pause
bindsym F12 exec playerctl --all-players play-pause
bindsym XF86AudioNext exec "playerctl --player=mpv,vlc next"
bindsym XF86AudioPrev exec "playerctl --player=mpv,vlc prev"
bindsym XF86AudioStop exec playerctl --all-players pause

bindsym $Mod+h exec "playerctl --player=mpv,vlc position 5-"
bindsym Ctrl+KP_Left exec "playerctl --player=mpv,vlc position 5-"
bindsym $Mod+l exec "playerctl --player=mpv,vlc position 5+"
